data:
    image: buildpack-deps:trusty
    volumes:
        - /designsafe/static:/var/www/designsafe-ci.org/static
        - /designsafe/media:/var/www/designsafe-ci.org/media
        - /designsafe/redis_data:/data
        - /corral-repl/tacc/NHERI:/corral-repl/tacc/NHERI

memcached:
    image: memcached

websocket:
    image: designsafeci/portal:{{ version }}
    env_file: designsafe.env
    log_driver: syslog
    log_opt:
        tag: designsafe_websocket
    hostname: {{websocket_container_hostname}}
    ports:
        - 9000:9000
    links:
        - memcached:memcached
    volumes_from:
        - data
    command: /usr/local/bin/uwsgi --ini /portal/conf/uwsgi_websocket.ini

django:
    image: designsafeci/portal:{{ version }}
    env_file: designsafe.env
    log_driver: syslog
    log_opt:
        tag: designsafe_main
    hostname: {{django_container_hostname}}
    ports:
    - 8000:8000
    links:
        - memcached:memcached
    volumes_from:
        - data
    command: NEW_RELIC_CONFIG_FILE=/portal/conf/newrelic.ini NEW_RELIC_ENVIRONMENT={{new_relic_environment}} NEW_RELIC_LICENSE_KEY={{new_relic_license_key}} newrelic-admin run-program /usr/local/bin/uwsgi --ini /portal/conf/uwsgi.ini
